<UserControl
    x:Class="XWingSquadronBuilder_v4.Presentation.UserControls.UpgradeSlotList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XWingSquadronBuilder_v4.Presentation.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interfaces="using:XWingSquadronBuilder_v4.Interfaces"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>
    <ItemsControl ItemsSource="{x:Bind UpgradeSlots,Mode=OneWay}" >
        <ItemsControl.ItemContainerStyle>
            <Style TargetType="ContentPresenter">
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style >
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="interfaces:IUpgradeSlot">
                <ListViewItem Style="{StaticResource ListViewItemNoAnimations}" Tapped="ListViewItem_Tapped">
                    <RelativePanel>
                        <Image x:Name="imgType" Source="{x:Bind UpgradeType.Image, Mode=OneWay}" 
                            Height="20"
                            Width="20"
                            Margin="5"
                            RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
                        <TextBlock x:Name="txblkUpgradeName" 
                            Text="{x:Bind Upgrade.Name, Mode=OneWay, FallbackValue='UpgradeName'}"
                            RelativePanel.RightOf="imgType"
                            Margin="5"/>
                        <TextBlock x:Name="txblkCost" Text="{x:Bind Cost,Mode=OneWay, FallbackValue='Cost'}"
                                   RelativePanel.RightOf="txblkUpgradeName" 
                                   RelativePanel.AlignHorizontalCenterWith=""
                                   Foreground="DarkRed" RelativePanel.AlignVerticalCenterWith="txblkUpgradeName" 
                                   RelativePanel.LeftOf="btnClearUpgrade"
                                   Margin="5"/>
                        <TextBlock x:Name="txblkCardText"
                                   Text="{x:Bind Upgrade.CardText,Mode=OneWay, FallbackValue='CardText'}"                               
                                   RelativePanel.Below="txblkUpgradeName" 
                                   RelativePanel.LeftOf="btnClearUpgrade" RelativePanel.RightOf="" 
                                   RelativePanel.AlignLeftWith="txblkUpgradeName"
                                   Margin="5"/>
                        <Button x:Name="btnClearUpgrade" 
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE894;"
                                Width="28" 
                                FontSize="8"
                                Height="28"
                                Foreground="Red"  
                                Margin="5" 
                                RelativePanel.AlignRightWithPanel="True" 
                                Click="btnClearUpgrade_Click"                                  
                                RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    </RelativePanel>
                </ListViewItem>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
