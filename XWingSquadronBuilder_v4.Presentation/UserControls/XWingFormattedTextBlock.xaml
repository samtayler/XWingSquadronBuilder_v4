<UserControl
    x:Class="XWingSquadronBuilder_v4.Presentation.UserControls.XWingFormattedTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XWingSquadronBuilder_v4.Presentation.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UWPControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converters="using:XWingSquadronBuilder_v4.Presentation.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:TextAlignmentToHorizontalAlignment x:Key="TextAlignmentToHorizontalAlignment"/>
    </UserControl.Resources>


    <TextBlock x:Name="txblkUpgradeText"
                   TextAlignment="{x:Bind TextAlignment, Mode=OneWay}"
                    VerticalAlignment="Center" TextWrapping="WrapWholeWords"
               FontSize="{x:Bind FontSize, Mode=OneWay}"/>


</UserControl>
